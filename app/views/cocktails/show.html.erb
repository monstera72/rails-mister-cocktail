<div class="container">
  <h1><%= @cocktail.name%></h1>

  <% @cocktail.doses %>

  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %></li>
    <%= link_to "Delete a dose", dose_path(dose), method: :delete %>
    <% end %>





  </ul>
  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail)  %>
</div>
